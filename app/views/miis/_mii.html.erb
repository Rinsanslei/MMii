<div id="<%= dom_id mii %>">
  <p>
    <strong>Image:</strong>
    <%= image_tag mii.image %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= mii.name %>
  </p>

  <p>
    <strong>Firstname:</strong>
    <%= mii.firstname %>
  </p>

  <p>
    <strong>Nickname:</strong>
    <%= mii.nickname %>
  </p>

  <p>
    <strong>Age:</strong>
    <%= mii.age %>
  </p>

  <p>
    <strong>Keyword:</strong>
    <%= mii.keyword %>
  </p>

  <p>
    <strong>Slogan:</strong>
    <%= mii.slogan %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= mii.description %>
  </p>
    
</div>
